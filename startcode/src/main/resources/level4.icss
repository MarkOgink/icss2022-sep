ParWidth := 500px;
AdjustColor := TRUE;
LinkColor := #ff0000;
p {
	background-color: #ffffff;
	width: ParWidth;
	if[AdjustColor] {
	    color: #124532;
	    UseLinkColor := FALSE;
	    if[UseLinkColor]{
	        background-color: LinkColor;
	    } else {
	        background-color: #000000;
	    }
	}
	height: 20px;
}
a {
	color: LinkColor;
}

#menu {
	width: ParWidth + 20px;
}

.menu {
	color: #000000;
    background-color: LinkColor;

}
